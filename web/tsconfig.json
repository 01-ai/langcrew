{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2023", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
